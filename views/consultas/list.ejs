<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
<div class="container-lg">
    <hr>
    <h2 class="text-center"> Hospitais cadastrados</h2>
    <a class="btn btn-success ml-3" href="/hospitais/cadastrar">Cadastrar um novo hospital</a>
    <hr>
    <table class="table table-striped ">
        <thead>
            <tr>
                <th>Data</th>
           
            </tr>
        </thead>
        <tbody>
            <% hospitais.forEach(hospital => { %>

                <tr>
                   <th><%= hospital.id %></th>
                   <th>
                   <a href="/hospitais/editar/<%= hospital.id %>" class="btn btn-warning">Editar</a>
                   <form method="POST" action="/hospitais/delete" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                    <input type="hidden" name="id" value="<%= hospital.id %>">
                    <button class="btn btn-danger">Deletar</button>
                    </form>
                </th>
                </tr>

            <% }) %>
        </tbody>
        </table>
    </div>
 <script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("VocÃª quer deletar esta categoria?");
        if(decision){
            form.submit();
        }
    }
</script>
