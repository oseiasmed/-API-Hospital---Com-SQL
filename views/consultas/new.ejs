<%- include('../partials/header.ejs') %> <%-
include('../partials/navbar.ejs') %>

<div class="container">
	<hr>
	<div class="card">
		<div class="card-header">
			<h2 class="text-center">Agendar consulta</h2>
		</div>
		<div class="card-body">
			<form action="/pacientes/save" method="post">
				<div class="row">
					<div class="col">
						<label>Nome do paciente:</label> <select name="pacientes"
							class="form-control"> <% pacientes.forEach((paciente) =>
							{ %>
							<option value="<%= paciente.id %>"><%= paciente.nome %></option>
							<% }) %>
						</select>
					</div>
					<div class="col">
						<!--<input type="number" class="form-control" name="cpf" placeholder="CPF">-->
						<label>Hospital:</label> <select name="hospitais"
							class="form-control"> <% hospitais.forEach((hospital) =>
							{ %>
							<option value="<%= hospital.id %>"><%= hospital.nome %></option>
							<% }) %>
						</select><br>
					</div>
				</div>
				<label>Data da consulta:</label> <input class="form-control"
					type="date" name="dtnascimento" placeholder="Data de nascomento"><br>
				<button class="btn btn-success btn-block">Agendar</button>
			</form>
		</div>
	</div>
</div>
<%- include('../partials/footer.ejs') %>

